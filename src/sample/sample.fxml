<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField  text="" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <Button text="+" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="1" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button text="2" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Button text="-" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button text="3" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="4" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button text="5" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Button text="/" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="6" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="7" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button text="8" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <Button text="*" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button text="9" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="." GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Button text="=" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

</GridPane>